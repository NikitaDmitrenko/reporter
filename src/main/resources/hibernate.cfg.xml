<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/iamreporter?autoReconnect=true&amp;useUnicode=true&amp;createDatabaseIfNotExist=true&amp;characterEncoding=utf-8</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
        <property name="current_session_context_class">thread</property>
        <property name="hibernate.connection.CharSet">utf8</property>
        <property name="hibernate.connection.characterEncoding">utf8</property>
        <property name="hibernate.connection.useUnicode">true</property>


        <mapping class="Iamreporter.Model.MediaFile"/>
        <mapping class="Iamreporter.Model.User"/>
        <mapping class="Iamreporter.Model.UserNews"/>
        <mapping class="Iamreporter.Model.Views"/>
        <mapping class="Iamreporter.Model.LikeNews"/>
        <mapping class="Iamreporter.Model.Comment"/>
        <mapping class="Iamreporter.Model.VkontakteFriend"/>
        <mapping class="Iamreporter.Model.TwitterFriend"/>
        <mapping class="Iamreporter.Model.FacebookFriend"/>
        <mapping class="Iamreporter.Model.Subscribers"/>
    </session-factory>
</hibernate-configuration>

